<div class='sign-in-grid'>  
  <div class='header'>
    <h1>Log in</h1>
  </div>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), 
    layout: :horizontal, control_col: 'col-6 offset-3') do |f| %>
    <div class='container'>
      
      <div class='fields'>
        <%= f.email_field :email, hide_label: true, placeholder: 'Enter Email' %>
        <%= f.password_field :password, hide_label: true, placeholder: 'Enter Password' %>
      </div>
      
      <div class='actions'>
        <%= link_to 'Forgot your password?', new_password_path(resource_name), 
          class: 'btn btn-outline-warning btn-sm' %>
        &nbsp;
        <%= link_to 'Register', new_registration_path(resource_name), 
          class: 'btn btn-outline-secondary btn-sm' %>
        &nbsp;
        <%= f.submit 'Sign In', class: 'btn btn-outline-primary btn-sm' %>
      </div>
  
    </div>    
  <% end %>
</div>
