<div class='change-password'>
  <div class='header'>  
    <h1>Change your password</h1>
  </div>
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), 
    layout: :horizontal, control_col: 'col-6 offset-3', html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
      <div class='container'>

      <div class='fields'>
        <%= f.password_field :password, hide_label: true, placeholder: 'New Password' %>
        <%= f.password_field :password_confirmation, hide_label: true, placeholder: 'Re-enter New Password' %>
      </div>

      <div class='actions'>
        <%= f.submit 'Change my password', class: 'btn btn-outline-primary btn-sm' %>
        &nbsp;
        <%= link_to 'Cancel', new_session_path(resource_name), class: 'btn btn-outline-secondary btn-sm' %>
      </div>
    </div>
  <% end %>
</div>