<%- if current_user.present? %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to current_user.type, url_for(current_user.class.new), class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <%= render "navigation/#{current_user.type.underscore}/fields" %>
      </ul>
    </div>
    <form class="form-inline">
      <%= "Welcome #{current_user.name} !" %>
      <div style="margin-left: 10px;">
        <%= link_to('logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark') %>
      </div>
    </form>
  </nav>
<% end %>